  "info": {
    "title": "Real-Time Quiz API",
    "description": "API for interactive real-time quiz platform with WebSocket support",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "auth",
      "description": "Authentication endpoints"
    },
    {
      "name": "users",
      "description": "User management"
    },
    {
      "name": "quizzes",
      "description": "Quiz CRUD operations"
    },
