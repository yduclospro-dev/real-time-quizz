generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  lastName    String
  firstName   String
  email       String   @unique
  password    String
  role        Role
  createdAt   DateTime @default(now())
  quizzes     Quiz[]
  sessionParticipants SessionParticipant[]
}

enum Role {
  TEACHER
  STUDENT
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
}

enum SessionState {
  CREATED
  STARTED
  FINISHED
}

model Quiz {
  id          String   @id @default(uuid())
  title       String
  createdAt   DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  questions   Question[]
  sessions Session[]
}

model Session {
  id         String   @id @default(uuid())
  code       String   @unique
  quiz       Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId     String
  state      SessionState @default(CREATED)
  createdAt  DateTime @default(now())
  startedAt  DateTime?
  currentQuestionIndex Int @default(0)
  currentQuestionEndsAt DateTime?
  endedAt    DateTime?
  participants SessionParticipant[]

  answerSubmissions AnswerSubmission[]
}

model SessionParticipant {
  id           String   @id @default(uuid())
  session      Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId    String
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  displayName  String
  joinedAt     DateTime @default(now())
  lastSeen     DateTime?
  isConnected  Boolean  @default(true)
  participantToken String?

  @@unique([sessionId, userId])
  answerSubmissions AnswerSubmission[]
}

model Question {
  id        String   @id @default(uuid())
  text      String
  type      QuestionType
  image     String? 
  timeLimit Int @default(30)
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId    String
  createdAt DateTime @default(now())
  answers   Answer[]

  answerSubmissions AnswerSubmission[]
}

model Answer {
    id         String   @id @default(uuid())
    text       String
    isCorrect  Boolean
    createdAt  DateTime @default(now())
    question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
    questionId String
}

model AnswerSubmission {
  id             String   @id @default(uuid())
  session        Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId      String
  participant    SessionParticipant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  participantId  String
  question       Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId     String
  selectedAnswerIds Json
  submittedAt    DateTime @default(now())
  isFinal        Boolean  @default(true)
}