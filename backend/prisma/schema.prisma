generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  lastName    String
  firstName   String
  email       String   @unique
  password    String
  role        Role
  createdAt   DateTime @default(now())
  quizzes     Quiz[]
}

enum Role {
  TEACHER
  STUDENT
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
}

model Quiz {
  id          String   @id @default(uuid())
  title       String
  createdAt   DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  questions   Question[]
}

model Question {
  id        String   @id @default(uuid())
  text      String
  type      QuestionType
  image     String? 
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId    String
  createdAt DateTime @default(now())
  answers   Answer[]
}

model Answer {
  id         String   @id @default(uuid())
    text       String
    isCorrect  Boolean
    createdAt  DateTime @default(now())
    question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
    questionId String
}